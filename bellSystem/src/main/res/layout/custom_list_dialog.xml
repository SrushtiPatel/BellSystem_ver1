<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <TextView android:id="@+id/tvPosition" 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_weight="0"/>
    
    <TextView android:id="@+id/tvAlarmLable"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Alarm"
        android:layout_margin="1dp"
        android:textSize="@dimen/input_box_size"/>
    
    <TextView android:id="@+id/etAlarmTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:background="@drawable/border_button_secondary"
        android:layout_margin="2dp"
        android:textSize="@dimen/input_box_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
        />
    
    <TextView android:id="@+id/etBellTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:background="@drawable/border_button_secondary"
        android:layout_margin="2dp"
        android:textSize="@dimen/input_box_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="2"
        />
    
    <Button android:id="@+id/btnSet"
        android:text="@string/action_alarm_set"
        android:background="@drawable/border_button_secondary"
        android:visibility="gone"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    
     <Button android:id="@+id/btnReset"
        android:text="@string/action_alarm_reset"
        android:background="@drawable/border_button_secondary"
         android:visibility="gone"
        android:layout_margin="2dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" 
        android:layout_weight="1"/>

</LinearLayout>
