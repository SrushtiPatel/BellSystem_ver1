<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mt.bell"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"/>
 	
 	<uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_bell"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mt.bell.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mt.bell.DeviceListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mt.bell.HomeActivity"
            android:label="@string/title_activity_home" >
            
        </activity>
        <activity
            android:name="com.mt.bell.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.mt.bell.SpeechToTextActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mt.bell.SetAlarmActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mt.bell.SetBellTimeActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
